= simple_form_for @pic, html:{miltipart: true} do |f|
	-if @pic.errors.any?
	#errors
		%h2
		= plurarize(@pic.errors.count, 'errors')
			prevented this pic from saving
		%ul
		-@pic.errors.full_messages.each do |msg|
			%li=msg

	.form-group
		= f.input :title, input_html: { class: 'form-control' }
	.form-group
		= f.input :desc, input_html: { class: 'form-control' }
	
		= f.button :submit, class: 'btn btn-info'